<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Buttons. -->
    <style name="ButtonNewTransaction" parent="@style/Widget.MaterialComponents.ExtendedFloatingActionButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:backgroundTint">@color/dark_green</item>
        <item name="android:letterSpacing">0</item>
        <item name="android:text">Nova Transação</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">18sp</item>
        <item name="cornerRadius">5dp</item>
    </style>

    <style name="ButtonSave" parent="@style/Widget.MaterialComponents.ExtendedFloatingActionButton">
        <item name="android:layout_width">120dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:backgroundTint">@color/green</item>
        <item name="android:letterSpacing">0</item>
        <item name="android:text">Salvar</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">18sp</item>
        <item name="cornerRadius">5dp</item>
    </style>

    <style name="ButtonCancel" parent="@style/Widget.MaterialComponents.ExtendedFloatingActionButton">
        <item name="android:layout_width">120dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:backgroundTint">@color/red</item>
        <item name="android:letterSpacing">0</item>
        <item name="android:text">Cancelar</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">18sp</item>
        <item name="cornerRadius">5dp</item>
    </style>
</resources>