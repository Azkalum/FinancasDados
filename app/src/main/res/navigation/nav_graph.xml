<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/nav_graph"
    app:startDestination="@id/homeFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:name="br.projeto.financasdados.view.fragments.HomeFragment"
        android:label="HomeFragment" >
        <action
            android:id="@+id/action_homeFragment_to_extractFragment"
            app:destination="@id/extractFragment" />
        <action
            android:id="@+id/action_homeFragment_to_transactionFragment"
            app:destination="@id/transactionFragment" />
    </fragment>
    <fragment
        android:id="@+id/extractFragment"
        android:name="br.projeto.financasdados.view.fragments.ExtractFragment"
        android:label="ExtractFragment" />
    <fragment
        android:id="@+id/transactionFragment"
        android:name="br.projeto.financasdados.view.fragments.TransactionFragment"
        android:label="TransactionFragment" />
</navigation>